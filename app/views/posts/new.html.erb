<h1> Ecrire un nouvel article</h1>

<%=form_for @post do |f|%>
    <div class="form-group">
        <%= f.label "Titre de l'Article" %><br/>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <%= f.label "Contenu de l'article"%><br/>
        <%= f.text_area :content %>
    </div>
    <button type="submit" class="btn btn-primary">Poster l'article</button>
<% end %>