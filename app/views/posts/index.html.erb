<h1 style="margin-bottom: 4%">Articles</h1>

<div class="row">
    <% @posts.each do |post| %>
        <% user = User.find(post.user_id) %>
        <div class="card col-sm-12 col-md-6 col-lg-4" style="margin-bottom : 2%">
                <%#<img class="card-img-top" src="..." alt="Card image cap">%>
            <div class="card-block">
                <h4 class="card-title"><%=link_to post.title , post_path(post.id)%> </h4>
                <p class="card-text">
                    Post√© par <%= user.username %> le <%=post.created_at.strftime("%Y-%m-%d")%> 
                </p>
                <%=link_to "Lire la suite", post_path(post.id), :class => "btn btn-primary"%>
            </div>
        </div>
    <% end %>
</div>
        

   